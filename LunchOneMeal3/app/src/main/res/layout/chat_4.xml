<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    >


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/chat5"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mimage5"
            android:src="@drawable/jungyun"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginTop="4dip"

            />
        <TextView
            android:id="@+id/nickname5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mimage5"
            android:text="정연이"
            android:textSize="13dip"
            android:layout_alignTop="@+id/mimage5"
            android:textColor="#000000"

            />
        <ImageView
            android:layout_marginTop="2dip"
            android:id="@+id/message5"

            android:layout_width="210dip"
            android:layout_height="240dip"
            android:scaleType="fitXY"


            android:layout_below="@+id/nickname5"
            android:layout_toRightOf="@+id/mimage5"
            android:background="@drawable/messageyou2"
            android:gravity="center"
            android:src="@drawable/jungyun"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            />

        <TextView

            android:id="@+id/date5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-03-03"
            android:textSize="12dip"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/message5"
            android:layout_toRightOf="@+id/message5"

            />

    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/chat1"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mimage"
            android:src="@drawable/jungyun"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginTop="4dip"

            />
        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mimage"
            android:text="정연이"
            android:textSize="13dip"
            android:layout_alignTop="@+id/mimage"
            android:textColor="#000000"

            />
        <TextView
            android:layout_marginTop="2dip"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="43dip"
            android:layout_below="@+id/nickname"
            android:layout_toRightOf="@+id/mimage"
            android:background="@drawable/messageyou2"
            android:gravity="center"
            android:text="안녕"
            android:textSize="13dip"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            />

        <TextView

            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-03-03"
            android:textSize="12dip"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/message"
            android:layout_toRightOf="@+id/message"

            />

    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:id="@+id/chat2"

        >
        <View
            android:layout_width="0px"
            android:layout_height="1.3px"
            android:layout_weight="1.1"
            android:layout_marginTop="18dip"
            android:background="#000000"
            />
        <TextView
            android:id="@+id/date2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017년 6월 4일 (수)"
            android:textSize="12dip"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="10dip"
            />

        <View
            android:layout_width="0px"
            android:layout_height="1.3px"
            android:layout_weight="1.1"
            android:layout_marginTop="18dip"
            android:background="#000000"
            />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/chat3"
        >
        <TextView
            android:id="@+id/date3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-03-03"
            android:textSize="12dip"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/message3"
            />
        <TextView
            android:id="@+id/message3"
            android:layout_width="wrap_content"
            android:layout_height="43dip"
            android:background="@drawable/messageme2"
            android:gravity="center"
            android:text="안녕"
            android:textSize="12dip"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_toRightOf="@id/date3"
            />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/chat6"
        >
        <TextView
            android:id="@+id/date6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-03-03"
            android:textSize="12dip"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/message6"
            />
        <ImageView
            android:id="@+id/message6"
            android:layout_width="210dip"
            android:layout_height="240dip"
            android:scaleType="fitXY"

            android:background="@drawable/messageme2"
            android:gravity="center"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_toRightOf="@id/date6"
        />
</RelativeLayout>


</FrameLayout>