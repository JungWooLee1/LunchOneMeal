<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:id="@+id/chat1"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mimage"
        android:src="@drawable/jungyun"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_marginTop="4dip"

        />
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mimage"
        android:text="정연이"
        android:textSize="13dip"
        android:layout_alignTop="@+id/mimage"
        android:textColor="#000000"

        />
    <ImageView
        android:layout_marginTop="2dip"
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="270dip"
        android:maxHeight="270dip"
        android:adjustViewBounds="true"

        android:layout_below="@+id/nickname"
        android:layout_toRightOf="@+id/mimage"
        android:background="@drawable/messageyou2"
        android:gravity="center"
        android:src="@drawable/jungyun"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        />

    <TextView

        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014-03-03"
        android:textSize="12dip"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/message"
        android:layout_toRightOf="@+id/message"

        />

</RelativeLayout>