<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:id="@+id/chat3"
    >
    <TextView
        android:id="@+id/date3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014-03-03"
        android:textSize="12dip"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/message3"
        />
    <ImageView
        android:id="@+id/message3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/messageme2"
        android:gravity="center"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_toRightOf="@id/date3"
        android:maxWidth="270dip"
        android:maxHeight="270dip"
        android:adjustViewBounds="true"
        android:src="@drawable/jungyun"
        />
</RelativeLayout>