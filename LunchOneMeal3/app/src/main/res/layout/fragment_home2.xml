<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tab2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <Spinner
            android:id="@+id/kindSpinner2"
            android:layout_gravity="center"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:entries="@array/kind"
            android:layout_marginTop="3dip"
            />
        <Spinner

            android:id="@+id/DistanceSpinner2"
            android:layout_gravity="center"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:entries="@array/distance"
            android:layout_marginTop="3dip"
            android:layout_marginLeft="15dip"
            />
        <Button
            android:id="@+id/search2"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:text="Search"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="5dip"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 위치정보 갱신"
            android:layout_gravity="center"

            />
        <ImageButton
            android:id="@+id/locationButton2"
            android:src="@drawable/locations"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitXY"
            android:background="#000000"
            />

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--
        <com.nhn.android.maps.NMapView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapView2"/>
            -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/v_mapview2"
            android:layout_width="match_parent"
            android:layout_height="370dip"
            class="com.google.android.gms.maps.MapView"
            >
        </com.google.android.gms.maps.MapView>



    </LinearLayout>








</LinearLayout>